{
    "manifest_version": 3,
    "name": "Copy Page as Markdown",
    "version": "1.0",
    "description": "With this extension, you can copy the current website as Markdown. Very handy for working with LLMs.",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Copy Page as Markdown",
      "default_icon": {
        "16": "copy_as_markdown_icon.png",
        "48": "copy_as_markdown_icon.png",
        "128": "copy_as_markdown_icon.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },

    "permissions": ["activeTab", "clipboardWrite", "storage", "scripting"]
  }
